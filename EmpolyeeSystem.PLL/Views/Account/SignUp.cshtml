@using EmpolyeeSystem.BLL.ModelVM.AccountVm
@model RegestraionVM
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form asp-action="SignUp" asp-controller="Account">
                    <center> <h1><b>Sign Up</b></h1></center>

                    <!-- Email input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                        <label asp-for="Username" class="form-label">Your Name :</label>
                        <input asp-for="Username" type="text" id="form3Example1c" class="form-control" />
                        <span asp-validation-for="Username" class="text-dark-brown"></span>
                    </div>
                    <div data-mdb-input-init class="form-outline mb-4">
                        <label asp-for="Email" class="form-label"> Your Email :</label>
                        <input asp-for="Email" type="email" id="form3Example1c" class="form-control" />
                        <span asp-validation-for="Email" class="text-dark-brown"></span>
                    </div>
                    <!-- Password input -->
                    <div data-mdb-input-init class="form-outline mb-3">
                        <label asp-for="Password" class="form-label" for="form3Example4c">Password :</label>
                        <input asp-for="Password" type="password" id="form3Example4c" class="form-control" />
                        <span asp-validation-for="Password" class="text-dark-brown"></span>
                    </div>
                    
                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                            <label asp-for="ConfirmPassword" class="form-label" for="form3Example4c"> Confirm Password :</label>
                            <input asp-for="ConfirmPassword" type="password" id="form3Example4c" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-dark-brown"></span>
                        </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <input class=" btn btn-primary btn-lg" type="submit" value="Create" />

                    </div>

                </form>
            </div>
        </div>
    </div>
</section>

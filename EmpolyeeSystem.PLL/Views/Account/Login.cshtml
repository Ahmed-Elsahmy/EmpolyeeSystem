@using EmpolyeeSystem.BLL.ModelVM.AccountVm
@model LoginUserVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form asp-action="Login" asp-controller="Account">


                    <center> <h1><b>Login</b></h1></center>


                    <!-- Email input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                        <label asp-for="UserName" class="form-label">Your Name :</label>
                        <input asp-for="UserName" type="text" id="form3Example1c" class="form-control" />
                        <span asp-validation-for="UserName" class="text-dark-brown"></span>
                    </div>

                    <!-- Password input -->
                    <div data-mdb-input-init class="form-outline mb-3">
                        <label asp-for="Password" class="form-label" for="form3Example4c">Password :</label>
                        <input asp-for="Password" type="password" id="form3Example4c" class="form-control" />
                        <span asp-validation-for="Password" class="text-dark-brown"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-0">
                            <input class="form-check-input me-2" type="checkbox" asp-for = "RememberMe" />
                            <label class="form-check-label" asp-for="RememberMe">
       
                            </label>
                        </div>
                        <a href="#!" class="text-body">Forgot password?</a>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <input class=" btn btn-primary btn-lg" type="submit" value="login" />

                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Don't have an account? <a asp-action="SignUp" asp-controller ="Account"
                                                      class="link-danger">Register</a>
                        </p>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>

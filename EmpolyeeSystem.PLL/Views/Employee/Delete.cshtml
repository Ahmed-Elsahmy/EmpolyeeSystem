@using EmpolyeeSystem.BLL.ModelVM.EmpolyeeVM
@model DeleteEmpVM
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<center><h1><p class="text-danger"><b>Delete  <i class="material-icons">delete_sweep</i> </b></p></h1></center>
<form asp-action="DeleteEmp" , asp-controller="Employee">
    <div class="form-group">
        <label><b>Id</b></label>
        <input type="text" readonly class="form-control" asp-for="@Model.id">
    </div>
    <div class="form-group">
        <label><b>Name</b></label>
        <input type="text" readonly class="form-control" asp-for="Name" placeholder="Enter Name">
    </div>
    <div class="form-group">
        <label><b>Age</b></label>
        <input type="text" readonly class="form-control" asp-for="Age" placeholder="Age">
    </div>
    <button type="submit" class="btn btn-danger mt-3">  <i class="material-icons">delete_sweep</i></button>
    <a asp-action="Index" asp-controller="Employee" asp-route-id="1" class="btn btn-success mt-3"><span class="glyphicon glyphicon-remove"></span></a>

</form>

<style>
    body{
        background-color: #E7FBE6;
    }
</style>
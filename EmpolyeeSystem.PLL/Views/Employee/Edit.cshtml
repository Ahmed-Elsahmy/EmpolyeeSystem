@using EmpolyeeSystem.BLL.ModelVM.EmpolyeeVM
@model EditEmpVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<center><h1><p class="text-success"><b>Update Employee Info</b></p></h1></center>
<form asp-action="Edit" , asp-controller="Employee">
    <div class="form-group">
        <label><b>Id</b></label>
        <input type="text" readonly class="form-control" asp-for="id">
    </div>
    <div class="form-group">
        <label><b>Name</b></label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name">
    </div>
    <div class="form-group">
        <label><b>Age</b></label>
        <input type="text" class="form-control" asp-for="Age" placeholder="Age">
    </div>
    <div class="form-group">
        <label><b>Salary</b></label>
        <input type="text" class="form-control" asp-for="Salary" placeholder="Age">
    </div>
    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="Index" asp-controller="Empolyee" asp-route-id="1" class="btn btn-danger">Cancel</a>

</form>



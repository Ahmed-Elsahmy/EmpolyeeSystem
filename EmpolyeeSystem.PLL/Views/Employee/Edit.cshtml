@using EmpolyeeSystem.BLL.ModelVM.EmpolyeeVM
@model EditEmpVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<center><h1><p class="text-success"><b>Edit  <i class="material-icons">border_color</i></b></p></h1></center>
<form asp-action="Edit" , asp-controller="Employee" enctype="multipart/form-data">
    <div class="form-group">
        <label><b>Id</b></label>
        <input type="text" readonly class="form-control" asp-for="id">
    </div>
    <div class="form-group">
        <label><b>Name</b></label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name">
        <b><span asp-validation-for="Name"></span></b>

    </div>
    <div class="form-group">
        <label><b>Age</b></label>
        <input type="number" class="form-control" asp-for="Age" placeholder="Age">
        <b><span asp-validation-for="Age"></span></b>

    </div>
    <div class="form-group">
        <label><b>Salary</b></label>
        <input type="number" class="form-control" asp-for="Salary" placeholder="Age">
        <b><span asp-validation-for="Salary"></span></b>

    </div>
    <div class="form-group">
        <label><i class="material-icons">insert_photo</i></label>
        <input type="file" class="form-control" asp-for="@Model.ImageName" placeholder="Add Image">
    </div>
    <div class="form-group">
        <label asp-for="DeptId" class="mb-1"><b>Department</b></label>
        <select asp-for="DeptId" class="form-control">
            <option value=""> Select Department </option>
            @foreach (var department in Model.Departments)
            {
                <option value="@department.id">@department.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-success mt-3">
        <i class="material-icons">border_color</i>
    </button>
    <a asp-action="Index" asp-controller="Employee" asp-route-id="1" class="btn btn-danger mt-3"><span class="glyphicon glyphicon-remove"></span></a>

</form>

<style>
    body{
        background-color: #E7FBE6;
    }
</style>

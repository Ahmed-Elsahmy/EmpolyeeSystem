@using EmpolyeeSystem.BLL.ModelVM.DepartmentVM
@model CreateDeptVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<center><h1 class="text-success">Add Department</h1></center>
<form asp-action="Create" , asp-controller="Department" enctype="multipart/form-data">
    <div class="form-group">
        <label><b>Name</b></label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name Of Deapartment">
        <span asp-validation-for="Name"></span>
    </div>
    <button type="submit" class="btn btn-success mt-3"> <span class="glyphicon glyphicon-plus-sign"></span></button>
    <a asp-action="Index" asp-controller="Department" asp-route-id="1" class="btn btn-danger mt-3"><span class="glyphicon glyphicon-remove-sign"></span></a>
</form>

<style>
    body{
        background-color: #E7FBE6;
    }
</style>